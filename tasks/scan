#!/usr/bin/env ruby

trap("SIGINT") { exit! }

require 'rubygems'
require 'yaml'
require 'net/http'

source_path = File.dirname(__dir__)
$:.unshift(source_path)

type = ARGV[0]

abort("I can scan for 'hardware', 'software' or 'links'.") unless type =~ /^(hardware|software|links)$/

glob = case type
  when 'hardware'
    File.join(source_path, 'data', 'wares', 'hardware', '*.yml')
  when 'software'
    File.join(source_path, 'data', 'wares', 'software', '*.yml')
  when 'links'
    File.join(source_path, 'data', 'links', '**', '*.yml')
  end

puts "Scanning:"

Dir.glob(glob) do |path|
  data = YAML::load_file(path)
  needs_update = false

  begin
    print "- #{data['name']}: "

    url = URI(data['url'])
    response = Net::HTTP.get_response(url)
    
    case response
      when Net::HTTPSuccess then
        puts "Okay."
      when Net::HTTPMovedPermanently, Net::HTTPMovedTemporarily, Net::HTTPRedirection then
        new_url = response['location']

        if new_url =~ /jsessionid/
          puts "Looks like a session URL"
        else
          new_url = "#{url.scheme}://#{url.host}#{new_url}" unless new_url =~ /^https?:\/\//

          data['url'] = new_url
          needs_update = true

          puts "Updated (#{response.code})."
        end
      when Net::HTTPNotFound then
        data['url'] = 'FIX ME'
        needs_update = true

        puts "Not found."
      else
        puts "#{response.code}?"
    end

  rescue Exception => e
    puts e
  end

  if needs_update
    File.open(path, 'w') do |file|
      file.write(YAML::dump(data))
    end
  end
end