<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
	<url>
		<loc>http://usesthis.com/</loc>
		<changefreq>weekly</changefreq>
	</url>
	
	<url><loc>http://usesthis.com/about/</loc></url>
	<url><loc>http://usesthis.com/community/</loc></url>
	<url><loc>http://usesthis.com/feed/</loc></url>
	<url><loc>http://usesthis.com/interviews/</loc></url>

	<% @counts.each do |row| %>
	<url><loc>http://usesthis.com/interviews/in/<%= row['year'] %>/</loc></url>
	<% end %>
	
	<% @categories.each do |category| %>
	<url><loc>http://usesthis.com/interviews/<%= category.slug %>/</loc></url>
	<% end %>
	
	<% @interviews.each do |interview| %>
	<url><loc>http://<%= interview.slug%>.usesthis.com/</loc></url>
	<% end %>
</urlset>