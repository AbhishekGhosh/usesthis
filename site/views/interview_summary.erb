<figure>
	<% unless selected %><a href="http://<%= interview.slug %>.usesthis.com/" title="View an interview with <%= interview.name %>."><% end %>
	<img src="<%= url_for("/images/portraits/#{interview.slug}.jpg") %>" width="500" height="335" class="portrait" alt="<%= interview.name %>">
	<% unless selected %></a><% end %>
</figure>

<h2 class="person">
	<% unless selected %><a href="http://<%= interview.slug %>.usesthis.com/" title="View an interview with <%= interview.name %>."><% end %>
	<%= interview.name %>
	<% unless selected %></a><% end %>
</h2>

<p class="summary"><%= interview.summary %></p>
<p class="details">
	<% if interview.is_published == true %>
	Posted <time datetime="<%= interview.date_publish %>" pubdate><%= interview.date_publish.strftime("%b %e, %Y") %></time>
	<% else %>
	Unpublished
	<% end %>
	<% if interview.categories %>
	in
	<% for category in interview.categories %>
		<a href="<%= url_for("/interviews/#{category.slug}/") %>" rel="category" title="View all of the '<%= category.slug %>' interviews."><%= category.slug %></a>
	<% end %>
	<% end %>
	<% if selected && interview.credit_name && !interview.credit_name.empty? %>
	(photo by <% if interview.credit_url %><a href="<%= interview.credit_url %>" title="More from <%= interview.credit_name %>."><% end %><%= interview.credit_name %><% if interview.credit_url %></a><% end %>)
	<% end %>
</p>