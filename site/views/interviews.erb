<h2>Interviews</h2>

<% if @counts %>
<article class="dates">
	<h3>By year</h3>
	<ul id="years">
	<% for row in @counts %>
		<li>
			<a href="/interviews/in/<%= row['year'] %>" title="View all the interviews from <%= row['year'] %>."><%= row['year'] %></a> <span class="summary">(<%= row['count'] %> interview<% if row['count'] != 1 %>s<% end %>)</span>
		</li>
	<% end %>
	</ul>
</article>
<% end %>

<% if @categories %>
<article class="categories">
	<h3>By category</h3>
	<p>
		<% for category in @categories %>
			<a href="/interviews/<%= category.slug %>/" rel="<%= category.slug %>" title="View all of the '<%= category.slug %>' interviews."><%= category.slug %></a>
		<% end %>
	</p>
</article>
<% end %>