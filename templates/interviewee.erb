<figure>
  <% unless @selected %><a href="http://<%= @interview.slug %>.usesthis.com/" title="View the interview with <%= @interview.name %>."><% end %>
  <img src="/images/portraits/<%= @interview.slug %>.jpg" width="500" height="335" class="portrait u-photo photo" alt="<%= @interview.name %>">
  <% unless @selected %></a><% end %>
  <% if @selected && @interview.credits %>
    <figcaption>Photo by <% if @interview.credits['url'] %><a href="<%= @interview.credits['url'] %>" title="View more about <%= @interview.credits['name'] %>."><%= @interview.credits['name'] %></a><% else %><%= @interview.credits['name'] %><% end %>.</figcaption>
  <% end %>
</figure>
<header>
  <h3<% unless @selected %> class="p-name fn"<% end %>><% if @selected %><%= @interview.name %><% else %><a href="http://<%= @interview.slug %>.usesthis.com/" title="View the interview with <%= @interview.name %>." class="p-name fn"><%= @interview.name %></a><% end %></h3>
  <p class="summary"><%= @interview.summary %></p>
  <p class="details">Posted <time datetime="<%= @interview.date.strftime('%Y-%m-%d') %>"><%= @interview.date.strftime('%B %d, %Y') %>.</time></p>
  <nav class="categories">
    <ul>
    <% @interview.categories.each do |category| %><li><a href="/interviews/<%= category %>/" title="View all the <%= category.capitalize %> interviews." class="p-category category"><%= category %></a></li><% end %>
    </ul>
  </nav>
</header>